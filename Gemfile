source "https://rubygems.org"

# Minimal Mistakesテーマを使用
gem "minimal-mistakes-jekyll"

# Jekyllの基本設定
gem "jekyll", "~> 3.9"

# 必要なプラグイン
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# ローカルでのデバッグ用
gem "webrick", "~> 1.7"

# 日本語対応が必要な場合
gem "jekyll-multiple-languages-plugin"

# 開発ツール
group :jekyll_plugins do
  gem "jekyll-paginate"
end

gem 'kramdown-parser-gfm'
